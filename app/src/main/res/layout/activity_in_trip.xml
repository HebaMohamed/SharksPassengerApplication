<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_in_trip"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.sharks.gp.sharkspassengerapplication.InTripActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:padding="7dp"
        android:id="@+id/linearlayout1"
        android:layout_alignParentStart="true">



        <Button
            style="?android:textAppearanceSmall"
            android:background="@drawable/buttonoval2"
            android:id="@+id/endbtn"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="End Trip"
            android:textColor="#fff"
            android:padding="7dp"
            android:textSize="17dp"
            android:layout_below="@+id/linearLayout4"
            android:layout_centerHorizontal="true" />


    </LinearLayout>

    <at.markushi.ui.CircleButton
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:src="@drawable/navigation"
        app:cb_color="@color/colorAccent"
        app:cb_pressedRingWidth="10dip"
        android:id="@+id/navbtn"
        android:layout_above="@+id/linearlayout1"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-30dp" />

    <at.markushi.ui.CircleButton
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:src="@drawable/chat"
        app:cb_color="@color/colorAccent"
        app:cb_pressedRingWidth="10dip"
        android:id="@+id/chatbtn"
        android:layout_above="@+id/linearlayout1"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-30dp"
        android:layout_marginEnd="60dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:id="@+id/linearLayout3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="In Trip"
            android:padding="7dp"
            android:id="@+id/addrtxt"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:id="@+id/linearLayout4"
        android:layout_below="@+id/linearLayout3"
        android:padding="5dp"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/addrplaceholder"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Pick Up Address"
            android:layout_gravity="center"
            android:id="@+id/addresstxt" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="..Km"
            android:layout_gravity="right"
            android:gravity="right"
            android:textSize="12sp"
            android:id="@+id/disttxt" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/halfColorPrimary"
        android:id="@+id/linearLayout5"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Reaching destination in .."
            android:padding="7dp"
            android:id="@+id/durationtxt"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp" />

    </LinearLayout>

</RelativeLayout>
